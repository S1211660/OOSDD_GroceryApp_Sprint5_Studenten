<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             xmlns:models="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
             x:Class="Grocery.App.Views.CategoriesView"
             x:DataType="vm:CategoriesViewModel"
             Title="Categorieën">

    <Grid RowDefinitions="Auto,*" Padding="20">
        <Label Grid.Row="0" 
               Text="Productcategorieën" 
               FontSize="24" 
               FontAttributes="Bold"
               Margin="0,0,0,20"/>

        <CollectionView Grid.Row="1" 
                       ItemsSource="{Binding Categories}"
                       SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Category">
                    <Frame Padding="15" 
                           Margin="0,5"
                           BorderColor="LightGray"
                           CornerRadius="10"
                           HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CategoriesViewModel}}, Path=CategoryTappedCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>

                        <Label Text="{Binding Name}" 
                               FontSize="18"
                               VerticalOptions="Center"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>